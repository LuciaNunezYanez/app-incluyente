<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="500dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Grabar audio"
        android:textColor="@color/azulFondo"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_recorder_azul" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGrabarRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_verde"
            android:drawableTop="@drawable/ic_play"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="INICIAR"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnAceptarRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_azul"
            android:drawableTop="@drawable/ic_stop"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="TERMINAR"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnCancelarRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_rojo"
            android:drawableTop="@drawable/ic_cancel"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Cancelar"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>